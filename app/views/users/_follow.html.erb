
 
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

<table class="table">  
<tbody><tr></tr>
<tr>
<th>name</th>
<th><%= user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= user.introduction %></th>
</tr>
  <th>follows</th>
  <th><%= link_to user_followings_path(user) do %>
    <%= user.followings.count %>
    <% end %>
</th>
</tr>
<th>followers</th>
  <th><%= link_to user_followers_path(user) do %>
    <%= user.followers.count %>
    <% end %>
</th>
</tr>

</tbody>
 </table>

<% if user_signed_in? && current_user != user %>
  <% if current_user.following?(user) %>
  <div class="row">
    <%= link_to user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-primary" do %>
      フォロー外す
    <% end %>
  </div>
  <% else %>
  <div class="row">
    <%= link_to user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-success" do %>
      フォローする
    <% end %> 
  </div>
  <% end %> 
<% else %>
  <div class="row">
  <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
  <% end %>
 
</div>
 <% end %>

 