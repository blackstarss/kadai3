</tr>

</tbody>

</table>
<% if current_user.following?(user) %>
<div class="row">
  <%= link_to user_relationships_path(user.id), method: :delete, class:"btn btn-outline-secondary btn" do %>
   フォロー外す
  <% end %>
  <% else %>
<div class="row">
  <%= link_to user_relationships_path(user.id), method: :post, class:"btn btn-outline-secondary btn" do %>
  フォローする
  <% end %> 
  <% end %> 
</div>
 
  