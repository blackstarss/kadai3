<main>
<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info </h2>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2> <%= @user.errors.count %>error prohibited this obj from being saved:</h2>   
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div> 
  
 <% end %>  
       

<%= form_with model:@user, local:true do |f| %>

    <%= f.label :Name %>
    <%= f.text_field :name, class: "form-control name" %>
    <%= f.label :Image%>
    <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
    <%= f.label :introduction%>
    <%= f.text_area :introduction, class:"form-control introduction" %><br>
  <div class="form-group">
    <%= f.submit " Update User", class:"btn btn-secondary" %>
 <% end %>

</div>
</div>
</div>
</main>